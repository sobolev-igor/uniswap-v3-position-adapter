{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "no-undef": "off",
    "prefer-const": "off",
    "no-console": "off",
    "linebreak-style": "off",
    "operator-linebreak": "off",
    "object-curly-newline": "off",
    "arrow-body-style": "off"
  }
}
