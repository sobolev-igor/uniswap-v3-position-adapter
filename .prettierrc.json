{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 99,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "always",
        "trailingComma": "none"
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 99,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "explicitTypes": "always",
        "trailingComma": "all"
      }
    }
  ]
}
